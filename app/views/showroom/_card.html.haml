%div{class: "card"}
  %div{class: "card-image-container", style: 'background-image: url('"#{asset_path(car[:image_name])}"')'}
    %div{class: "card-label"}
      %h4{class: "make"}=car[:make]
      %h3{class: "model"}=car[:model]
  %div{class: "card-toolbar"}
    = link_to render_svg("archive_icon.svg"), '#', class: "btn btn-delete"
    - if car[:has_new_offer]
      %a{href: "#", class: "btn btn-offer"} 1 new offer
  %div{class: "card-specifications"}
    %p{class: "engine"}=car[:engine]
    %p{class: "details"}=car[:details]
